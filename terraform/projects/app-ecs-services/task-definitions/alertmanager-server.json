[
  {
    "name": "alertmanager",
    "image": "prom/alertmanager",
    "cpu": 128,
    "memoryReservation": 256,
    "essential": true,
    "portMappings": [
      {
        "containerPort": 9093,
        "hostPort": 9093
      }
    ],
    "command": [
      "--config.file=/etc/alertmanager/alertmanager.yml",
      "--web.external-url=${alertmanager_url}"
    ],
    "mountPoints": [
      {
        "sourceVolume": "alertmanager",
        "containerPath": "/etc/alertmanager"
      }
    ],
    "logConfiguration": {
      "logDriver": "awslogs",
      "options": {
        "awslogs-group": "${log_group}",
        "awslogs-region": "${region}",
        "awslogs-stream-prefix": "alertmanager"
      }
    }
  },
  {
    "name": "s3-config-grabber",
    "image": "mesosphere/aws-cli",
    "cpu": 128,
    "memory": 128,
    "essential": false,
    "mountPoints": [
      {
        "sourceVolume": "config-from-s3",
        "containerPath": "/configs"
      }
    ],
    "command": ["s3", "sync", "s3://${config_bucket}/alertmanager", "/configs/alertmanager"],
    "logConfiguration": {
      "logDriver": "awslogs",
      "options": {
        "awslogs-group": "${log_group}",
        "awslogs-region": "${region}",
        "awslogs-stream-prefix": "alertmanager-config"
      }
    }
  }
]
